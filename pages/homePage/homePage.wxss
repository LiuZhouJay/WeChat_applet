/* 导航栏 */
.guide {
  display: flex;
  justify-content: space-between;
  width: 750rpx;
  height: 185rpx;
  position: absolute;
  bottom: 0rpx
;
}
.guide-item {
  text-align: center;
  font-size: 14px;
  width: 375rpx;
  line-height: 1;
  padding: 20px;
}
.guide-item image {
  width: 70rpx;
}
.devices_summary {
  margin-top: 30px;
  padding: 10px;
  font-size: 16px;
}
.device_list {
  height: 50rpx;
  margin: 50px 5px;
  margin-top: 0;
  border: 1px solid #EEE;
  border-radius: 5px;
  width: auto;
}
.picker_selector{
  position:relative;
  right: 100rpx;
}
.device_item {
  border-bottom: 1px solid #EEE;
  padding: 10px;
  color: #666;
}
.device_item_hover {
  background-color: rgba(0, 0, 0, .1);
}
